{
  "name": "crypto-auction-house",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node server/standalone-server.js",
    "lint": "next lint",
    "server": "nodemon server/index.js",
    "server:simple": "nodemon server/simple-server.js",
    "server:standalone": "node server/standalone-server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "demo": "concurrently \"npm run dev\" \"npm run server:simple\"",
    "setup": "node scripts/setup.js",
    "db:create": "createdb crypto_auction",
    "db:schema": "psql -d crypto_auction -f database/schema.sql",
    "db:sample": "psql -d crypto_auction -f database/sample-data.sql",
    "db:setup": "npm run db:create && npm run db:schema && npm run db:sample"
  },
